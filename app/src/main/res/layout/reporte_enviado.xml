<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/volver"
        android:layout_width="57dp"
        android:layout_height="24dp"
        android:src="@mipmap/flecha"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="323dp"
        android:layout_height="147dp"
        android:text="Gracias por tu colaboración en hacer  de Bogotá un lugar más seguro.   Tu reporte ha sido recibido y será  canalizado a las autoridades   correspondientes para su pronta  atención. Cada reporte cuenta y  contribuye a mejorar nuestra ciudad.  ﻿ ¡Gracias por ser parte del cambio!"
        android:textColor="#35424A"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="272dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="177dp"
        android:layout_height="141dp"
        android:src="@mipmap/enviado"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="86dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:backgroundTint="#7E2199"
        android:text="Enviar otro reporte"
        android:textColor="#FAF7F7"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="469dp" />
</androidx.constraintlayout.widget.ConstraintLayout>