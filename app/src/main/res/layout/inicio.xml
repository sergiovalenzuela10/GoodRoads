<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rotationX="360">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotationX="360">

        <Button
            android:id="@+id/button"
            android:layout_width="214dp"
            android:layout_height="43dp"
            android:backgroundTint="#7e2199"
            android:backgroundTintMode="multiply"
            android:text="Iniciar sesion"
            android:textColor="#FFFFFF"
            android:textColorLink="#7e2199"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="534dp" />

        <EditText
            android:id="@+id/correo_recuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="380dp" />

        <EditText
            android:id="@+id/contrasena_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#716E6E"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="474dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#35424a"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="272dp"
            tools:text="Iniciar sesión" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electronico"
            android:textColor="#7e2199"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="365dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="#7e2199"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="455dp" />

        <Button
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:text="¿Has olvidado tu contraseña?"
            android:textColor="#AAA6A6"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="587dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:text="Registrarse"
            android:textColor="#7e2199"
            android:textColorLink="#00FFFFFF"
            tools:layout_editor_absoluteX="149dp"
            tools:layout_editor_absoluteY="647dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="122dp"
            android:layout_height="106dp"
            android:src="@mipmap/usuario"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="143dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="184dp"
            android:layout_height="60dp"
            android:src="@mipmap/titulo"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="66dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Hola! Qué gusto verte de nuevo"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="323dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>